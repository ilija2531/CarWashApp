<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Добредојде -->
        <TextView
            android:id="@+id/tvWelcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Добредојдовте!"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginBottom="32dp" />

        <!-- Копче: Закажи термин -->
        <Button
            android:id="@+id/btnBookNow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="📅 Закажи термин"
            android:layout_marginBottom="16dp" />

        <!-- Копче: Мои резервации -->
        <Button
            android:id="@+id/btnMyBookings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="📋 Мои резервации"
            android:layout_marginBottom="32dp" />

        <!-- Совет на денот -->
        <TextView
            android:id="@+id/tvTip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#E0F7FA"
            android:text="🚗 Совет на денот:\n„Избегнувајте миење на автомобилот на сонце.“"
            android:padding="16dp"
            android:textSize="16sp"
            android:textColor="#000000"
            android:layout_marginTop="16dp"
            android:backgroundTint="#E0F7FA"
            android:elevation="2dp" />
    </LinearLayout>
</ScrollView>
