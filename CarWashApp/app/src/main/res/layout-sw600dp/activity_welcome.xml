<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#F5FBFF"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="48dp">

        <ImageView
            android:id="@+id/ivLanguage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:padding="12dp"
            android:contentDescription="@string/change_language"
            android:src="@drawable/ic_language" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/welcome"
            android:textSize="32sp"
            android:textStyle="bold"
            android:textColor="#0D47A1"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="48dp" />

        <!-- Копчиња со зголемен padding -->
        <Button
            android:id="@+id/btnLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/login"
            android:backgroundTint="#2196F3"
            android:textColor="#FFFFFF"
            android:padding="18dp"
            android:layout_marginBottom="24dp" />

        <Button
            android:id="@+id/btnRegister"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/register"
            android:backgroundTint="#64B5F6"
            android:textColor="#FFFFFF"
            android:padding="18dp"
            android:layout_marginBottom="24dp" />

        <Button
            android:id="@+id/btnGuestLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/guest"
            android:backgroundTint="#90CAF9"
            android:textColor="#000000"
            android:padding="18dp"
            android:layout_marginBottom="24dp" />

        <Button
            android:id="@+id/btnCustomGoogle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/sign_in_with_google"
            android:backgroundTint="#FFFFFF"
            android:textColor="#000000"
            android:drawableStart="@drawable/ic_google_logo"
            android:drawablePadding="16dp"
            android:padding="18dp"
            android:layout_marginTop="24dp" />

        <Button
            android:id="@+id/btnCustomFacebook"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/continue_with_facebook"
            android:backgroundTint="@color/com_facebook_blue"
            android:textColor="@android:color/white"
            android:drawableStart="@drawable/ic_facebook_logo"
            android:drawablePadding="16dp"
            android:padding="18dp"
            android:layout_marginTop="16dp" />

    </LinearLayout>
</ScrollView>
